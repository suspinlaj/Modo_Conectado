<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="ModoConectado.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ModoConectado">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  BOTONES  -->
            <Style x:Key="Botones" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource crema}" />
                <Setter Property="FontFamily" Value="titulos" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="FontSize" Value="17" />
                <Setter Property="CharacterSpacing" Value="1.2" />
                <Setter Property="BorderWidth" Value="3" />
                <Setter Property="BorderColor" Value="{StaticResource rosaClarito}" />
                <Setter Property="TextColor" Value="{StaticResource azul2}" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>

            <!--  RECTANGULOS  -->
            <Style x:Key="RectanguloBase" TargetType="Rectangle">
                <Setter Property="BackgroundColor" Value="{StaticResource rosaClarito}" />
                <Setter Property="Stroke" Value="{StaticResource rosaClarito}" />
                <Setter Property="Opacity" Value="0.5" />
            </Style>

            <!--  RECTANGULOS INDIVIDUALES  -->
            <Style
                x:Key="RectangulosIndividuales"
                BasedOn="{StaticResource RectanguloBase}"
                TargetType="Rectangle">
                <Setter Property="HeightRequest" Value="10" />
                <Setter Property="WidthRequest" Value="160" />
            </Style>

            <!--  RECTANGULOS MUCHOS  -->
            <Style
                x:Key="RectanguloMuchos"
                BasedOn="{StaticResource RectanguloBase}"
                TargetType="Rectangle">
                <Setter Property="HeightRequest" Value="10" />
                <Setter Property="WidthRequest" Value="130" />
            </Style>

            <!--  Labels  -->
            <Style x:Key="LabelsInfo" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="FontFamily" Value="titulos" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="CharacterSpacing" Value="1" />
                <Setter Property="TextColor" Value="{StaticResource azul2}" />
            </Style>

            <!--  Entrys  -->
            <Style x:Key="Entrys" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="{StaticResource azulBueno}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource crema}" />
                <Setter Property="WidthRequest" Value="150" />
                <Setter Property="HeightRequest" Value="0" />
                <Setter Property="TextColor" Value="{StaticResource azulOscurito}" />
                <Setter Property="HorizontalTextAlignment" Value="Start" />
            </Style>

            <!--  Datepicker  -->
            <Style x:Key="DatePicker" TargetType="DatePicker">
                <Setter Property="BackgroundColor" Value="{StaticResource rosaClarito}"/>
                <Setter Property="TextColor" Value="{StaticResource crema}" />
                <Setter Property="WidthRequest" Value="140" />
            </Style>

            <!--  Entry Buscador  -->
            <Style x:Key="EntryBuscador" TargetType="Entry" >
                <Setter Property="BackgroundColor" Value="{StaticResource rosaClarito}"/>
                <Setter Property="TextColor" Value="{StaticResource azulOscurito}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource crema}"/>
                <Setter Property="HeightRequest" Value="0"/>
                <Setter Property="WidthRequest" Value="600" />
            </Style>
            
            <!-- ListViews Texto -->
            <Style x:Key="ListViewsText" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource rosa}"/>
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="VerticalOptions" Value="Fill" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>

            <!-- ListViews Bordes -->
            <Style x:Key="BorderListView" TargetType="Border">
                <Setter Property="Stroke" Value="{StaticResource azul2}"/>
                <Setter Property="StrokeShape" Value="5"/>
                <Setter Property="WidthRequest" Value="100"/>
                <Setter Property="HeightRequest" Value="120"/>
                <Setter Property="Margin" Value="60,0,60,0" />
            </Style>

            <!-- Grids Texto -->
            <Style x:Key="GridsTexto" TargetType="Grid">
                <Setter Property="VerticalOptions" Value="Fill"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
            </Style>

            <!-- ListViews -->
            <Style x:Key="ListViews" TargetType="ListView">
                <Setter Property="VerticalOptions" Value="Fill"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
